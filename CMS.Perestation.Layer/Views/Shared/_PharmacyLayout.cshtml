<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CuraHub</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="m-0 vh-100" style="background-color: #dddddd70;">
    <header>
        <partial name="_NavbarPartial" />
    </header>

    <!-- Main Content -->
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Features Section -->
    @if (ViewData["Title"] == "Pharmacy Categories")
    {
        <section class="features-section py-5 mt-3" style="background-color: rgb(0 112 205);">
            <div class="container text-center">
                <h2 class="text-white fw-bold mb-4">Why Choose CuraHub?</h2>
                <p class="text-white mb-5">Simplifying healthcare for everyone.</p>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm p-4 text-center">
                            <i class="bi bi-calendar-check text-primary display-4"></i>
                            <h5 class="fw-bold mt-3">Easy Booking</h5>
                            <p>Book appointments with just a few clicks.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm p-4 text-center">
                            <i class="bi bi-person-badge text-primary display-4"></i>
                            <h5 class="fw-bold mt-3">Expert Doctors</h5>
                            <p>Access a network of top-rated specialists.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm p-4 text-center">
                            <i class="bi bi-shield-lock text-primary display-4"></i>
                            <h5 class="fw-bold mt-3">Secure Platform</h5>
                            <p>Your data is safe with us.</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <footer class="footer text-white text-center py-3 mt-3" style="background-color: #dddddd70;">
                <div class="container">
                    <p class="mb-1">&copy; 2025 CuraHub. All rights reserved.</p>
                    <div>
                        <a href="#" class="text-white mx-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white mx-2"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white mx-2"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </footer>
        </section>
    } else {
        <!-- Footer -->
        <footer class="footer text-white text-center py-3 mt-3" style="background-color: rgb(0 112 205);">
            <div class="container">
                <p class="mb-1">&copy; 2025 CuraHub. All rights reserved.</p>
                <div>
                    <a href="#" class="text-white mx-2"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-white mx-2"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="text-white mx-2"><i class="bi bi-instagram"></i></a>
                </div>
            </div>
        </footer>
    }


    <!-- Scripts -->
    <script>
        var isAuthenticated = @Json.Serialize(User?.Identity?.IsAuthenticated);
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (Toastr) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
