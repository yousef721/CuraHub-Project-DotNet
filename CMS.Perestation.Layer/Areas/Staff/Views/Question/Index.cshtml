@using CMS.Models.CuraHub.QuestionAndAnswerSection.QuestionsAndAnswersVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
}

<style>

    body {
        background-color: #e2e6ea;
        background-image: none;
    }

    h1 {
        color: black;
    }

</style>


@model Cust_QuestionAndAnswerVM

<div class="bg-white min-vh-100 mt-2 rounded-5">

    <h1>
        <img src="~/Files/Images/فلسطين.svg" class="rounded-circle " style="width: 50px;" />
    </h1>

    @foreach (var item in Model.Questions)
    {
        

        <br />
        <div class="border border-3 m-auto mt-3 w-75 p-3">

            <div style="width:90%; margin:auto;">

                <form action="/Staff/CuraHub/Q&A/Question/Answer" method="post">
                    <input type="hidden" name="Id" value="@item.Id" />
                    <input type="hidden" name="ApplicationUserId" value="@item.ApplicationUserId" />
                    <input type="hidden" name="DoctorId" value="@Model.DoctorId" />
                    <input type="hidden" name="Status" value="@true" />
                    <div class="row">
                    <div class="col-6">
                        <div class="mb-3">
                            <label for="SenderEmail" class="form-label text-black text-start">Date</label>
                                <input type="text" readonly class="form-control" name="Date" value="@item.Date">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3">
                            <label for="SenderEmail" class="form-label text-black text-start">Specialization</label>
                                <input type="hidden" class="form-control" name="SpecializationId" value="@item?.SpecializationId">
                            <input disabled type="text" class="form-control" value="@item?.Specialization?.Name">
                        </div>
                    </div>

                </div>
                    <div class="mb-3">
                    <label for="SenderEmail" class="form-label text-black text-start">Question</label>
                        <input type="text" readonly class="form-control" id="SenderEmail" name="Question" value="@item?.Question">
                </div>
                    <div class="mb-3">
                    <label for="answer" class="form-label text-black text-start">write your answer</label>
                        <textarea class="form-control" name="Answer" id="answer" rows="5"> @item?.Answer </textarea>
                </div>
                    <br />
                    <button type="submit" class="btn btn-primary"> Save Answer</button>
                </form>
            </div>


        </div>
    }

</div>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"> </script>


    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

}
