@{
    ViewData["Title"] = "Payment Failed";
    Layout = "~/Views/Shared/_PharmacyLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 p-5 text-center w-50">
        <div class="mb-4">
            <i class="fas fa-exclamation-triangle text-danger display-4"></i>
        </div>
        <h2 class="text-danger fw-bold">Payment Failed</h2>
        <p class="text-muted fs-5">Unfortunately, your payment could not be processed. Please try again.</p>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-warning shadow-sm">
                <p class="mb-0">@TempData["Error"]</p>
            </div>
        }

        <div class="mt-4">
            <a asp-action="Index" asp-controller="PharmacyCart" class="btn btn-outline-secondary btn-lg me-2">
                <i class="fas fa-shopping-cart"></i> Back to Cart
            </a>
            <a asp-action="Pay" asp-controller="PharmacyCart" asp-route-orderId="@ViewBag.OrderId" class="btn btn-primary btn-lg">
                <i class="fas fa-redo"></i> Retry Payment
            </a>
        </div>
    </div>
</div>
