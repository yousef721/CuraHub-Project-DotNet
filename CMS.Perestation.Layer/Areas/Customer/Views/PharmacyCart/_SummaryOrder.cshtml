@model CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.PharmacyCustomerVM

<div id="addressForm" class="card shadow-lg border-0 p-4 position-absolute top-50 start-50 translate-middle w-75">
    <h2 class="text-primary text-center fw-bold mb-4">Enter Your Address</h2>

    <form asp-action="SummaryOrder" method="post" enctype="multipart/form-data">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="FirstName" class="form-control" id="firstName" required>
                    <label for="firstName">First Name</label>
                </div>
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="LastName" class="form-control" id="lastName" required>
                    <label for="lastName">Last Name</label>
                </div>
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" id="email" required>
                    <label for="email">Email</label>
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Phone" type="tel" class="form-control" id="phone" required>
                    <label for="phone">Phone</label>
                </div>
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="State" class="form-control" id="state" required>
                    <label for="state">State</label>
                </div>
                <span asp-validation-for="State" class="text-danger small"></span>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="City" class="form-control" id="city" required>
                    <label for="city">City</label>
                </div>
                <span asp-validation-for="City" class="text-danger small"></span>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Region" class="form-control" id="region" required>
                    <label for="region">Region</label>
                </div>
                <span asp-validation-for="Region" class="text-danger small"></span>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Street" class="form-control" id="street" required>
                    <label for="street">Street</label>
                </div>
                <span asp-validation-for="Street" class="text-danger small"></span>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-lg btn-primary shadow-sm px-5">Submit</button>
            <button type="button" class="btn btn-secondary ms-2" onclick="hideAddressForm()">Cancel</button>
        </div>
    </form>
</div>

<script>
    function hideAddressForm() {
        document.getElementById("addressForm").style.display = "none";
    }
</script>
