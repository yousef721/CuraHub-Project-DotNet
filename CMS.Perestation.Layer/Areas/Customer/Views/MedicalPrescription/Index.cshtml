@using CMS.Models.CuraHub.ClinicSection.ClinicSectionVM.PatientVM
@model Cust_MedicalPrescriptionsVM
<style>
     

        .prescription {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header img {
                width: 100px;
                margin-bottom: 10px;
            }

            .header h1 {
                margin: 0;
                font-size: 24px;
                color: #2c3e50;
            }

            .header p {
                margin: 5px 0;
                color: #555;
            }

        .content {
            margin-bottom: 20px;
        }

            .content h3 {
                margin-bottom: 10px;
                color: #34495e;
            }

            .content p {
                margin: 5px 0;
            }

            .content ul {
                padding-left: 20px;
            }

                .content ul li {
                    margin-bottom: 5px;
                }

        
    </style>


    <div class="prescription">
        <div class="header">
            <img src="~/Files/Images/Logo.webp" class="rounded-circle" alt="Logo">
            <h1>Medical Prescription</h1>
        <p>Doctor: Dr. @Model?.Schedule.Doctor?.FirstName @Model?.Schedule.Doctor?.LastName</p>
            <p>Specialty: @Model?.Schedule.Doctor?.Specialization.Name</p>
        </div>

        <div class="content " style="color:black;">
            <h3>Patient Details</h3>
            <p class="text-start d-block">Name: @Model?.Patient?.FirstName @Model?.Patient?.LastName</p>
            @{var age =  DateOnly.FromDateTime(DateTime.Now).Year - @Model?.Patient?.DateOfBirth.Year;}
        <p class="text-start d-block">Age: @age</p>
            <p class="text-start d-block" >Date: @Model?.date</p>

            <h3>Medications</h3>
            <ul>
                @foreach(var brug in Model.MedicalPrescriptions)
                {
                <li class="text-start ">@brug.MedicineType - @brug.numOfTaken times a day- @brug.Details</li>

                }
            
            </ul>

            <h3>Notes</h3>
            <p>Take the medication after meals and drink plenty of water.</p>
        </div>

        <div >
            <p>Wishing you a speedy recovery!</p>
        </div>
    </div>
