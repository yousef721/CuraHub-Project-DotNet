
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
}
<style>

    body {
        background-color: #e2e6ea;
        background-image: none;
    }

    h1 {
        color: black;
    }

</style>
