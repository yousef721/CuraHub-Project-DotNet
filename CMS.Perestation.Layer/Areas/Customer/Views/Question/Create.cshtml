@using CMS.Models.CuraHub.QuestionAndAnswerSection.QuestionsAndAnswersVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        background-image: url('/Files/Images/group-doctors.avif');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        background-attachment: fixed;
    }
</style>

@model Cust_QuestionAndAnswerCreateVM

<style>
    body {
       background-image:none;
        background-color: #e2e6ea;
    }

    .Question {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .header {
        text-align: center;
        margin-bottom: 20px;
    }

        .header img {
            width: 100px;
            margin-bottom: 10px;
        }

        .header h1 {
            margin: 0;
            font-size: 24px;
            color: #2c3e50;
        }

        .header p {
            margin: 5px 0;
            color: #555;
        }

        .content {
            margin-bottom: 20px;
        }

        .content h3 {
            margin-bottom: 10px;
            color: #34495e;
        }

        .content p {
            margin: 5px 0;
        }

        .content ul {
            padding-left: 20px;
        }

        .content ul li {
            margin-bottom: 5px;
        }

    
</style>


<div class="Question">
    <div class="header">
        <img src="~/Files/Images/Logo.webp" class="rounded-circle" alt="Logo">
        <h1>Medical Question</h1>
        
    </div>

    <div class="content">
       
       
            <div>

            <form action="/Customer/CuraHub/Q&A/Question/Create" method="post">
                     <div class="form-floating ">

                    <select class="form-select" name="SpecializationId" aria-label="Default select example">
                        <option selected value="@null">Select speciality</option>
                        @foreach (var specialization in Model.Specializations)
                        {
                            <option value="@specialization.Id">@specialization.Name</option>
                        }

                    </select>
                    <label class="ms-2" for="floatingInput">Select speciality</label>
                </div>
                     <div class="mb-3 mt-3">
                    <label for="Question" class="form-label text-black text-start d-block">
                    Your question(Your identity will be anonymous)
                    
                </label>
                    <textarea class="form-control" id="Question" name="Question" placeholder="Question Description (Explanation of your medical symptoms)" rows="5" required></textarea>
                </div>
                     <div class="mt-3 mb-3">
                <button type="submit" class="btn btn-primary w-100">Submit</button>
			    </div>
			    </form>
            </div>
          
        <h3 class="text-black">Notes</h3>
        <p class="text-black">
            Text answers on CuraHub are not intended for individual diagnosis, treatment or prescription. For these, please consult a doctor.

        </p>
    </div>

   
</div>

