@using CMS.Models.CuraHub.IdentitySection.IdentitySectionVM

@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        background-image: url('/Files/Images/group-doctors.avif');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        background-attachment: fixed;
    }
</style>

@model ForgetPasswordVM

<br />
<br />
<div class="d-flex justify-content-center align-items-center " style="min-height: 100vh;">

    <div class="card mb-6" style="width: 70%;">
        <h1 class="text-white" style="background-color:#0070cd">
            Reset Password
        </h1>
        <div asp-validation-summary="All" class="text-danger"></div>

        <form asp-action="ForgetPassword" asp-controller="Account" asp-area="Identity" method="post">
            <div class="row">


                <div class="form-group">

                    <label for="exampleInputPassword1" class="text-start d-block m-3">Email</label>
                    <input type="email" class="form-control m-3" name="Email" id="exampleInputPassword1" placeholder="Email" required="">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    <br />
                </div>

            </div>


            <input type="submit" class="m-3" value="Reset Password">
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"> </script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"> </script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"> </script>


}
