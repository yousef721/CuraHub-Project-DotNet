@model CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.PharmacyCustomerVM

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="card shadow-sm p-4 rounded mt-5">
    <div class="card-header bg-primary text-white">
        <h2 class="text-center">@Model.FirstName @Model.LastName</h2>
    </div>
    <div class="card-body">
        <div class="row d-flex align-items-center">
            <div class="col-lg-12 col-md-12">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                    <li class="list-group-item"><strong>Phone:</strong> @Model.Phone</li>
                    <li class="list-group-item"><strong>Address:</strong> @Model.Street, @Model.Region, @Model.City, @Model.State</li>
                </ul>
            </div>
        </div>
        <div class="mt-4 d-flex justify-content-center gap-3">
            <a asp-action="Details" asp-controller="PharmacyOrder" asp-area="Admin" asp-route-id="@Model.Id" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-success px-4">
                <i class="fa-solid fa-circle-info"></i> View Order 
            </a>
            <a asp-action="Index" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-secondary px-4">
                <i class="bi bi-arrow-left-circle"></i> Back
            </a>
        </div>
    </div>
</div>
