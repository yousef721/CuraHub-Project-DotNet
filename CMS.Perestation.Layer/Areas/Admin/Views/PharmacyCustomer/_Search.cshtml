@model List<CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.PharmacyCustomerVM>

@foreach (var customer in Model)
{
    <tr>
        <td>@customer.FirstName @customer.LastName</td>
        <td>@customer.Email</td>
        <td>@customer.Phone</td>
        <td class="text-center">
            <a asp-action="Edit" asp-route-id="@customer.Id" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Details" asp-route-id="@customer.Id" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-info">
                <i class="fas fa-info-circle"></i> Details
            </a>
            <a class="btn btn-danger delete" data-id="@customer.Id" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fas fa-trash"></i> Delete
            </a>
        </td>
    </tr>
}
