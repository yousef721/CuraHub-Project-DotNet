@using CMS.Models.CuraHub.PharmacySection.PharmacySectionVM
@model List<PharmacyDeliveryRepresentativeVM>

@foreach (var item in Model)
{
    <tr>
        <td>@item.FirstName @item.LastName</td>
        <td>@item.Email</td>
        <td>@item.Phone</td>
        <td class="text-center">
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                <i class="fas fa-info-circle"></i> Details
            </a>
            <button class="btn btn-danger delete" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fas fa-trash"></i> Delete
            </button>
        </td>
    </tr>
}

