@using CMS.Models.CuraHub

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
}
@model List<Message>
<br />
<div class="bg-white min-vh-100">
    <h2>Messages</h2>

    @foreach(var item in Model)
    {
        <div class="border border-1 border-black m-2 p-2">
        <div class="row">
        <div class="col-md-1 p-2"></div>
        <div class="col-md-10 p-2">
            <div>
                <div class="mb-3">
                    <label for="SenderName" class="form-label">Sender Name</label>
                    <input disabled type="text" class="form-control" id="name" name="name" value="@item.SenderName">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Sender Email</label>
                    <input disabled type="email" class="form-control" id="email" name="email" value="@item.SenderEmail">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea disabled class="form-control" id="message" name="message" rows="5">@item.SenderMessage</textarea>
                </div>
            </div>
        </div>
        <div class="col-md-1 p-2"></div>
			</div>

        <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <a class="btn btn-primary" href="/Admin/CuraHub/Message/Delete?MessageId=@item.Id">
                       
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
                <div class="col-2"></div>
        </div>
        
        </div>
    }

</div>






@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}