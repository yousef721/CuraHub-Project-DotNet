@model List<CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.MedicineVM>

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h1 class="title m-3 fw-bold">Medicines</h1>
<div class="d-flex justify-content-between align-items-center">
    <partial name="_SearchPartial"/>
    <a asp-action="Create" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-primary mb-3"><i class="fas fa-plus"></i> Create New Medicine</a>
</div>
<div id="Content" class="bg-white shadow-sm mb-3 p-2 rounded">
    <div class="table-responsive">
        <table class="table table-bordered table-hover mb-0" id="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Category</th>
                    <th>Manufactory</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var medicine in Model)
                {
                    <tr>
                        <td>@medicine.Name</td>
                        <td>@medicine.Price EGP</td>
                        <td>@medicine.Quantity</td>
                        <td>@medicine.PharmacyCategory?.Name</td>
                        <td>@medicine.MedicineManufactory?.Name</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@medicine.Id" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@medicine.Id" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-info">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a class="btn btn-danger delete" data-id="@medicine.Id" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="_PaginationPartial" model="ViewBag.LastPage"/>
<partial name="_DeleteConfirmation"/>

@section Scripts {
    <script src="~/js/search.js"></script>
    <script src="~/js/pagination.js"></script>
    <script src="~/js/delete.js"></script>
}
