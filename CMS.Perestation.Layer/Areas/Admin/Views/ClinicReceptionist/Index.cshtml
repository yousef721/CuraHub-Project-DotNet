@using CMS.Data.Access.Layer.Repository.IRepository
@using CMS.Models.CuraHub.ClinicSection.ClinicSectionVM
@using CMS.Models.CuraHub.ClinicSection.ClinicSectionVM.ClinicReceptionistVM
@using CMS.Utitlities.StaticData
@inject IUnitOfWork _unitOfWork
@{
    var specializations = _unitOfWork.SpecializationRepository.Retrive();
    var cities = City.cities; // Use a dictionary to store cities for each state
    List<string> titles = ["Professor", "Lecturer", "Consultant", "Specialist"];

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CuraHubLayout.cshtml";
   
}

@model ClinicReceptionistsVM
<style>

    body {
        background-color: #e2e6ea;
        background-image: none;
    }

    h1 {
        color: black;
    }

</style>

<br />
<div class="bg-white p-3 min-vh-100">
    <br />
    <div class="row">
    <div class="col-9">
        <h1>All Clinic Receptionists</h1>
    </div>
    <div class="col-3">
        <a href="/Admin/CuraHub/Clinic/ClinicReceptionist/CreateEdit" class="btn btn-primary mt-0"><i class="bi bi-plus-circle"></i> Add New Clinic Receptionist</a>
    </div>
</div>
    <br />
    <div class="rounded-2 bg-white pb-2">
    <form>
        <br />

        <div class="row">
            <div class="row">
                <div class="col-5 ms-2">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="query" id="SearchInput" placeholder="Search By Clinic Receptionist Name">
                    </div>
                </div>
                <div class="col-4">
                    <select class="form-select" name="DoctorId" aria-label="Default select example">
                        <option selected>Select Doctor</option>
                        @foreach (var doctor in Model.doctors)
                        {
                            <option value="@doctor.Id">@doctor.FirstName @doctor.LastName</option>
                        }

                    </select>

                </div>
                <div class="col-2">
                    <button type="submit" class="btn btn-primary mt-0">Search</button>

                </div>
                
            </div>


        </div>
    </form>
</div>
    <br />
    
    <table class="table" style="border:solid">
    <thead class="table-dark">
        <tr>
            <th scope="col" style="text-align:center">ID</th>
            <th scope="col" style="text-align:center">Name</th>
            <th scope="col" style="text-align:center">Phone</th>
            <th scope="col" style="text-align:center">Email</th>
            <th scope="col" style="text-align:center">ProfilePicture</th>
            <th scope="col" style="text-align:center">Personal National ID Number</th>
            <th scope="col" style="text-align:center">Doctor</th>

            <th scope="col" style="text-align:center">More Details</th>
            <th scope="col" style="text-align:center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.clinicReceptionists)
        {
            <tr style="border:solid">
                <th scope="row" style="border:solid">@item.Id</th>
                <th scope="row" style="border:solid">@item.FirstName @item.LastName</th>
                <th scope="row" style="border:solid">@item.Phone</th>
                <th scope="row" style="border:solid">@item.Email</th>
                <th scope="row" style="border:solid;text-align:center"> <img src="~/Files/Images/ClinicReceptionistPictures/@item.ProfilePicture" style="width:50px" class="rounded-circle" alt="Alternate Text" /> </th>
                <th scope="row" style="border:solid;text-align:center">@item.PersonalNationalIDNumber</th>
                <th scope="row" style="border:solid;text-align:center"><a href="/Admin/CuraHub/Clinic/Doctor/Details?DoctorId=@item.DoctorId"> @item.Doctor.FirstName @item.Doctor.LastName </a></th>
                <th scope="row" style="border:solid;text-align:center"><a class="dropdown-item" href="/Admin/CuraHub/Clinic/ClinicReceptionist/Details?ClinicReceptionistId=@item.Id">Details</a></th>
                    <td style="border:solid">
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-primary mt-0">Action</button>
                        <div class="btn-group" role="group">
                            <button id="btnGroupDrop1" type="button" class="btn btn-primary mt-0 dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                <a class="dropdown-item" href="/Admin/CuraHub/Clinic/ClinicReceptionist/CreateEdit?ClinicReceptionistId=@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a class="dropdown-item delete-btn"
                                   data-ClinicReceptionist-id="@item.Id"
                                   data-ClinicReceptionist-name="@item.FirstName" + "@item.LastName"
                                   data-bs-toggle="modal"
                                   data-bs-target="#deleteModal">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
    
    <div class="d-flex flex-row-reverse">

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            @for (int i = 1; i <= (Model.TotalClinicReceptionistCount + 4) / 5; i++)
            {

                <li class="page-item"><a class="page-link " href="/Admin/CuraHub/Clinic/Index?PageNumber=@i">@i</a></li>

            }
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>


</div>
</div>
<script>
        var cities = @Html.Raw(Json.Serialize(cities));

    $(document).ready(function () {
      $('#mySelect').change(function () {
        var selectedState = $(this).val();
        var regionSelect = $('#regionSelect');

        // Clear previous options
        regionSelect.empty();

        if (selectedState) {
          var availableCities = cities[selectedState];
            regionSelect.append('<option value="@null" selected>Select Region</option>');
            regionSelect.append('<option value="@null" >All Region</option>');
          if (availableCities) {
            for (var i = 0; i < availableCities.length; i++) {
              regionSelect.append('<option value="' + availableCities[i] + '">' + availableCities[i] + '</option>');
            }
          }
        }
      });
    });
</script>



<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the Clinic Receptionist <strong id="modalClinicReceptionistName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDeleteBtn" href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>


<script>
    // Attach event listener to all delete buttons
    document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', function () {
            const ClinicReceptionistId = this.getAttribute('data-ClinicReceptionist-id');
            const ClinicReceptionistName = this.getAttribute('data-ClinicReceptionist-name');

            // Set the category name in the modal
            document.getElementById('modalClinicReceptionistName').textContent = ClinicReceptionistName;

            // Update the delete link to include the categoryId
            const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
            confirmDeleteBtn.href = `/Admin/CuraHub/Clinic/ClinicReceptionist/Delete?ClinicReceptionistId=${ClinicReceptionistId}`;
        });
    });
</script>





@section Scripts
