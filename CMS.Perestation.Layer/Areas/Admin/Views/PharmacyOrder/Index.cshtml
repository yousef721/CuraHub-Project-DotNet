@using CMS.Models.Enums
@model List<CMS.Models.CuraHub.PharmacySection.PharmacySectionVM.PharmacyOrderVM>

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="d-flex justify-content-between align-items-center m-3">
    <h1 class="title fw-bold m-0">Pharmacy Orders</h1>
    @* <a asp-action="Create" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-primary py-2"><i class="fas fa-plus"></i> Create New Order</a> *@
</div>
<div class="d-flex align-items-center gap-3">
    <partial name="_SearchPartial"/>
    <div class="mb-4">
        <select class="form-select select-filter" id="shipmentStatus">
            <option value="None">All Shipment Status </option>
            @foreach (var status in Enum.GetValues<ShipmentStatus>())
            {
                if (status != ShipmentStatus.None)
                {
                    <option value="@status">@status</option>
                }
            }
        </select>
    </div>
</div>
<div id="Content" class="bg-white shadow-sm mb-3 p-2 rounded">
    <div class="table-responsive">
        <table class="table table-bordered table-hover mb-0" id="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Total Price</th>
                    <th>Shipment Status</th>
                    <th>Customer</th>
                    <th>Delivery Representative</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td><span class="fw-bold text-primary">@order.TotalPrice</span> EGP</td>
                        <td>@order.ShipmentStatus</td>
                        <td>@order.PharmacyCustomer?.FirstName @order.PharmacyCustomer?.LastName</td>
                        <td>@order.PharmacyDeliveryRepresentative?.FirstName @order.PharmacyDeliveryRepresentative?.LastName</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@order.Id" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@order.Id" asp-route-pageNumber="@ViewBag.currentPage" class="btn btn-info">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a class="btn btn-danger delete" data-id="@order.Id" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="_PaginationPartial" model="ViewBag.LastPage"/>
<partial name="_DeleteConfirmation"/>

@section Scripts {
    <script src="~/js/search.js"></script>
    <script src="~/js/pagination.js"></script>
    <script src="~/js/delete.js"></script>
}
